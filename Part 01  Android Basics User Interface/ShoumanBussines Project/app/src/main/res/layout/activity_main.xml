<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF">



        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shouman For Ceramic and Finishing"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:fontFamily="monospace"
            android:background="#009688"
            android:padding="10dp" />
        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/name"
            android:layout_margin="30dp" />


        <TextView
            android:id="@+id/aboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerVertical="true"
            android:layout_marginTop="-30dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="Since 1992, spicilized in Finishing Materials like Sanitaryware, ceramics, wallpaper and parquet flooring.
We are Agents and distributors of a number
of major companies in the field like Ceramica Verde - Ceramica Cleopatra - Ideal Statdurd - Duravit - El Tayeb and a number of Sanitaryware supplies companies such as BR and GM and many. Also wallpaper and HDF flooring."
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/aboutUs"
            android:orientation="vertical">


            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact us:"
                android:textSize="30sp"
                android:padding="20dp"
                android:fontFamily="sans-serif-black"/>

            <RelativeLayout
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/phoneIcon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="0dp"
                    android:src="@drawable/phone" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/phoneIcon"
                    android:text="01028700014"
                    android:paddingTop="20dp"
                    android:paddingLeft="13dp"
                    android:textSize="25dp"
                    android:fontFamily="sans-serif-medium"/>
            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/location"
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/locationIcon"
                    android:text="Itay El-Baroud, Al-Bohira, Egypt"
                    android:paddingTop="15dp"
                    android:paddingLeft="10dp"
                    android:textSize="22dp"
                    android:fontFamily="sans-serif-medium"/>
            </RelativeLayout>





            <RelativeLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/emailIcon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/email"
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/emailIcon"
                    android:text="ShoumanInfo@info.com"
                    android:paddingTop="23dp"
                    android:paddingLeft="10dp"
                    android:textSize="25dp"
                    android:fontFamily="sans-serif-medium"/>
            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/websiteIcon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/website"
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/websiteIcon"
                    android:text="www.ShoumanCo.Com"
                    android:paddingTop="23dp"
                    android:paddingLeft="10dp"
                    android:textSize="25dp"
                    android:fontFamily="sans-serif-medium"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</ScrollView>